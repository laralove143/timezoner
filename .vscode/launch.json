  "version": "0.2.0",
  "configurations": [
    {
      "type": "mix_task",
      "name": "run",
      "request": "launch",
      "projectDir": "${workspaceRoot}",
      "exitAfterTaskReturns": false
    },
    {
      "type": "mix_task",
      "name": "test",
      "request": "launch",
      "task": "test",
      "taskArgs": ["--trace"],
      "startApps": true,
      "projectDir": "${workspaceRoot}",
      "requireFiles": ["test/**/test_helper.exs", "test/**/*_test.exs"]
    }
  ]
}
